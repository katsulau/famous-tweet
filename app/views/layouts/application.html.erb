<!DOCTYPE html>
<html>
  <head>
    <title>FamousTweet</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <style type="text/css" href="../../../assets/stylesheets/style.css"></style>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

      <!-- Compiled and minified CSS -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/css/materialize.min.css">

  <!-- Compiled and minified JavaScript -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/js/materialize.min.js"></script>
  <script
  src="https://code.jquery.com/jquery-3.3.1.js"
  integrity="sha256-2Kok7MbOyxpgUVvAk/HJ2jigOSYS2auK4Pfzbm7uH60="
  crossorigin="anonymous"></script>
  </head>

  <body>
    <script type="text/javascript" src="../../../assets/javasctipts/application.js"></script>

  <nav>
    <div class="nav-wrapper">
      <a href="#" class="brand-logo">偉人名言集</a>
      <ul id="nav-mobile" class="right hide-on-med-and-down">
        <% if user_signed_in? %>
          <li><%= link_to "投稿する", new_tweet_path %></li>
          <li>ログインユーザー：<%= current_user.name %></li>
          <li><%= link_to "LOG-OUT", destroy_user_session_path, method: :delete %></li>
        <% else %>
          <li><%= link_to "SIGN-UP", new_user_registration_path %></li>
          <li><%= link_to "LOG-IN", user_session_path %></li>
        <% end %>
      </ul>
    </div>
  </nav>
    <%= yield %>
  </body>
</html>


