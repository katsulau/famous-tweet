  <div class="contents row">
    <%= form_tag("/tweets/#{@tweet.id}", method: :patch ) do %>
      <h3>
        編集する
      </h3>
      <textarea placeholder="偉人の名前" name="tweet" cols="100" rows="10"><%= @tweet.tweet %></textarea>
      <input placeholder="偉人の名前" type="text" name="name" autofocus="true" value="<%= @tweet.name %>">
      <input type="submit" value="SENT">
    <% end %>
  </div>
